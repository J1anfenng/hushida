{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
} 